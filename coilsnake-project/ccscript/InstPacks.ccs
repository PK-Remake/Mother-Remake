/* Instrument packs repointer script (by cooprocks123e) */

command RepointPack(pack, label) {
    ROMTBL[0xC4F947, 3, pack] = {
        byte [2] label
        short label
    }
}

command ChangeSongInfo(song_num, song_pack, inst_pack_1, inst_pack_2, spc_addr) {
    ROMTBL[0xC4F707, 3, song_num] = {
        byte inst_pack_1
        byte inst_pack_2
        byte song_pack
    }
    ROMTBL[0xE6298A, 2, song_num] = {
        short spc_addr
    }
}

